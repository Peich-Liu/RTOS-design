<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.1//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_2.dtd'>
<nta>
	<declaration>// Place global declarations here.

chan press; 
chan cross;   </declaration>
	<template>
		<name x="5" y="5">Pedestrian</name>
		<declaration>// Place local declarations here.
</declaration>
		<location id="id0" x="-64" y="-160">
			<name x="-40" y="-176">Waiting</name>
		</location>
		<location id="id1" x="-64" y="-256">
			<name x="-56" y="-288">Needs_to_cross</name>
		</location>
		<location id="id2" x="-160" y="-256">
			<name x="-200" y="-288">Idle</name>
		</location>
		<init ref="id2"/>
		<transition>
			<source ref="id0"/>
			<target ref="id2"/>
			<label kind="synchronisation" x="-160" y="-208">cross?</label>
		</transition>
		<transition>
			<source ref="id2"/>
			<target ref="id1"/>
		</transition>
		<transition>
			<source ref="id1"/>
			<target ref="id2"/>
			<label kind="synchronisation" x="-128" y="-312">cross?</label>
			<nail x="-96" y="-288"/>
			<nail x="-128" y="-288"/>
		</transition>
		<transition>
			<source ref="id1"/>
			<target ref="id0"/>
			<label kind="synchronisation" x="-56" y="-224">press!</label>
		</transition>
	</template>
	<template>
		<name>Light</name>
		<declaration>clock x;</declaration>
		<location id="id3" x="32" y="-32">
			<name x="-48" y="-64">Requested</name>
			<label kind="invariant" x="0" y="-16">x &lt;= 60</label>
		</location>
		<location id="id4" x="-160" y="-288">
			<name x="-170" y="-318">Ready</name>
		</location>
		<location id="id5" x="-160" y="-32">
			<name x="-240" y="-16">Pause</name>
			<label kind="invariant" x="-192" y="-16">x &lt;= 60</label>
		</location>
		<location id="id6" x="-160" y="-160">
			<name x="-144" y="-192">Traffic_stopped</name>
			<label kind="invariant" x="-144" y="-152">x &lt;= 15</label>
		</location>
		<init ref="id4"/>
		<transition>
			<source ref="id3"/>
			<target ref="id3"/>
			<label kind="synchronisation" x="112" y="-48">press?</label>
			<nail x="96" y="-64"/>
			<nail x="96" y="-8"/>
		</transition>
		<transition>
			<source ref="id5"/>
			<target ref="id3"/>
			<label kind="synchronisation" x="-120" y="-56">press?</label>
		</transition>
		<transition>
			<source ref="id5"/>
			<target ref="id4"/>
			<label kind="guard" x="-352" y="-72">x==60</label>
			<nail x="-168" y="-32"/>
			<nail x="-288" y="-32"/>
			<nail x="-288" y="-288"/>
		</transition>
		<transition>
			<source ref="id4"/>
			<target ref="id6"/>
			<label kind="synchronisation" x="-216" y="-256">press?</label>
			<label kind="assignment" x="-216" y="-240">x = 0</label>
		</transition>
		<transition>
			<source ref="id6"/>
			<target ref="id5"/>
			<label kind="guard" x="-216" y="-104">x==15</label>
			<label kind="assignment" x="-208" y="-80">x = 0</label>
		</transition>
		<transition>
			<source ref="id3"/>
			<target ref="id6"/>
			<label kind="guard" x="48" y="-120">x == 60</label>
			<label kind="assignment" x="48" y="-96">x = 0</label>
			<nail x="32" y="-160"/>
		</transition>
		<transition>
			<source ref="id6"/>
			<target ref="id6"/>
			<label kind="synchronisation" x="-272" y="-168">cross!</label>
			<nail x="-224" y="-192"/>
			<nail x="-224" y="-128"/>
		</transition>
	</template>
	<system>// Place template instantiations here.
Ped1 = Pedestrian();
Ped2 = Pedestrian();

// List one or more processes to be composed into a system.
system Ped1, Ped2, Light;</system>
	<queries>
	</queries>
</nta>
